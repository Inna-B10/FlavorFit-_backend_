model Order {
  orderId        String      @id @default(cuid()) @map("order_id")
  orderReference String      @unique @map("order_reference")
  status         OrderStatus @default(PENDING)
  totalPrice     Decimal     @db.Decimal(10, 2)
  orderNote      String?

  user   User   @relation(fields: [userId], references: [userId], onDelete: Cascade)
  userId String @map("user_id")

  orderItems   OrderItem[]
  orderRecipes OrderRecipe[]

  courierId String?  @map("courier_id")
  courier   Courier? @relation(fields: [courierId], references: [courierId])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("orders")
}

model OrderItem {
  orderItemId String @id @default(cuid()) @map("order_item_id")

  // how many/much
  goodsCount          Decimal @map("goods_count")
  lineTotalAtPurchase Decimal @map("line_total_at_purchase") @db.Decimal(10, 2)

  // snapshot
  productNameAtPurchase         String  @map("product_name_at_purchase")
  productVariantLabelAtPurchase String? @map("product_variant_label_at_purchase")

  priceAtPurchase         Decimal  @map("price_at_purchase") @db.Decimal(10, 2) // price at the time of order
  pricingAmountAtPurchase Decimal  @map("pricing_amount_at_purchase") @db.Decimal(10, 3)
  pricingUnitAtPurchase   SaleUnit @map("pricing_unit_at_purchase")

  // relations
  productId String?  @map("product_id")
  product   Product? @relation(fields: [productId], references: [productId], onDelete: SetNull)

  orderId String @map("order_id")
  order   Order  @relation(fields: [orderId], references: [orderId], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("order_items")
}

model OrderRecipe {
  orderRecipeId String @id @default(cuid()) @map("order_recipe_id")

  orderId String @map("order_id")
  order   Order  @relation(fields: [orderId], references: [orderId], onDelete: Cascade)

  recipeId String @map("recipe_id")
  recipe   Recipe @relation(fields: [recipeId], references: [recipeId], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")

  @@unique([orderId, recipeId])
  @@map("order_recipes")
}

model Courier {
  courierId String @id @default(cuid()) @map("courier_id")

  courierName String @map("courier_name")
  phoneNumber String @unique @map("phone_number")

  orders Order[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("couriers")
}
